<h3>Meetings</h3>


<table class="table table-hover table-sm">
  <thead class="thead-light">
    <tr>
        <th scope="col">Date</th>
        <th scope="col">Home</th>
        <th scope="col">Away</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @meetings.each do |meeting| %>
      <tr>
          <td><%= meeting.date.strftime("%d %b %y") %></td>
          <td><%= meeting.home_team %>: <%= meeting.home_score %></td>
          <td><%= meeting.away_team %>: <%= meeting.away_score %></td>
          <td><%= link_to 'Show', meeting %></td>
          <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
          <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>







